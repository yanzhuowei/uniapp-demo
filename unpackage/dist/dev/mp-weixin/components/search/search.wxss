.search-box .search {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.search-box .search .input-wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 100rpx;
  padding: 20rpx 30rpx;
  background-color: #ea4451;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  position: relative;
}
.search-box .search .input-wrap::before,
.search-box .search .input-wrap::after {
  height: 44rpx;
  line-height: 1;
  background-size: 32rpx;
  background-position: 6rpx center;
  background-repeat: no-repeat;
  position: absolute;
  top: 28rpx;
  z-index: 9;
}
.search-box .search .input-wrap::before {
  content: '搜索';
  display: block;
  width: 100rpx;
  padding: 11rpx 0 10rpx 44rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  color: #666;
  font-size: 24rpx;
  left: 325rpx;
}
.search-box .search .input-wrap::after {
  display: none;
  content: '';
  width: 44rpx;
  left: 40rpx;
}
.search-box .search .input-wrap input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 60rpx;
  padding: 0 20rpx 0 64rpx;
  background-color: #fff;
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
}
.search-box .search .input-wrap text.cancle {
  display: none;
  width: 80rpx;
  text-align: right;
  line-height: 60rpx;
  font-size: 27rpx;
  color: #666;
}
.search-box .search .content {
  display: none;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 27rpx;
  background-color: #fff;
  position: relative;
}
.search-box .search .content .title {
  font-size: 27rpx;
  line-height: 1;
  color: #333;
}
.search-box .search .content .clear {
  display: block;
  width: 27rpx;
  height: 27rpx;
  float: right;
  background-size: cover;
}
.search-box .search .content .history {
  padding-top: 30rpx;
}
.search-box .search .content .history navigator {
  display: inline-block;
  line-height: 1;
  padding: 15rpx 20rpx 12rpx;
  background-color: #ddd;
  font-size: 24rpx;
  margin-right: 20rpx;
  margin-bottom: 15rpx;
  color: #333;
}
.search-box .search .content .result {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: #fff;
}
.search-box .search .content .result navigator {
  line-height: 1;
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  color: #666;
  border-bottom: 1px solid #eee;
}
.search-box .search .content .result navigator:last-child {
  border-bottom: none;
}
.search-box .search.focused {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9;
}
.search-box .search.focused .input-wrap {
  background-color: #eee;
}
.search-box .search.focused .input-wrap::before {
  display: none;
}
.search-box .search.focused .input-wrap::after {
  display: block;
}
.search-box .search.focused text.cancle {
  display: block;
}
.search-box .search.focused .content {
  display: block;
}

