.category-box scroll-view {
  height: 100%;
}
.category-box .category {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  position: absolute;
  top: 0rpx;
  bottom: 0;
}
.category-box .category .sup {
  width: 196rpx;
  background-color: #f4f4f4;
}
.category-box .category .sup .li {
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 27rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}
.category-box .category .sup .li:last-child {
  border-bottom: none;
}
.category-box .category .sup .li.active {
  background-color: #FFF;
  color: #ea4451;
  position: relative;
}
.category-box .category .sup .li.active::before {
  content: '';
  display: block;
  width: 8rpx;
  height: 60rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  background-color: #ea4451;
  position: absolute;
  left: 0;
  top: 50%;
}
.category-box .category .sub {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 20rpx 18rpx;
}
.category-box .category .sub .thumb {
  width: 100%;
  height: 180rpx;
}
.category-box .category .sub .children {
  text-align: center;
  color: #333;
}
.category-box .category .sub .children .title {
  display: inline-block;
  margin: 40rpx 0 20rpx;
  font-size: 30rpx;
}
.category-box .category .sub .children .title::before {
  content: '/';
  margin-right: 20rpx;
  color: #666;
}
.category-box .category .sub .children .title::after {
  content: '/';
  margin-left: 20rpx;
  color: #666;
}
.category-box .category .sub .brands {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.category-box .category .sub .brands navigator {
  width: 33%;
  margin-bottom: 20rpx;
}
.category-box .category .sub .brands image {
  width: 120rpx;
  height: 120rpx;
}
.category-box .category .sub .brands text {
  display: block;
  font-size: 24rpx;
}

