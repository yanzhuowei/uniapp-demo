.cart-box .shipment {
  height: 100rpx;
  line-height: 2;
  padding: 30rpx 30rpx 40rpx 30rpx;
  font-size: 27rpx;
  color: #333;
  background-color: #fff;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: bottom;
}
.cart-box .shipment .dt {
  width: 140rpx;
  float: left;
  clear: both;
}
.cart-box .shipment .dd {
  padding-left: 160rpx;
}
.cart-box .shipment .meta {
  padding-right: 50rpx;
}
.cart-box .shipment text.phone {
  float: right;
}
.cart-box .carts {
  background-color: #f4f4f4;
  padding-bottom: 110rpx;
  overflow: hidden;
}
.cart-box .carts .item {
  margin-top: 20rpx;
}
.cart-box .carts .shopname {
  padding: 30rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}
.cart-box .carts .goods {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 30rpx 20rpx 30rpx 0;
  margin-left: 100rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
  position: relative;
}
.cart-box .carts .goods .checkbox {
  display: block;
  width: 101rpx;
  height: 100%;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: absolute;
  left: -100rpx;
  top: 0;
}
.cart-box .carts .goods:last-child {
  border-bottom: none;
}
.cart-box .carts .goods .pic {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
.cart-box .carts .goods .meta {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 27rpx;
  color: #333;
  position: relative;
}
.cart-box .carts .goods .name {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cart-box .carts .goods .price {
  position: absolute;
  bottom: 0;
  color: #ea4451;
  font-size: 33rpx;
}
.cart-box .carts .goods .price text {
  font-size: 22rpx;
}
.cart-box .carts .goods .amount {
  position: absolute;
  bottom: 0;
  right: 20rpx;
  height: 48rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.cart-box .carts .goods .amount text {
  display: block;
  width: 60rpx;
  line-height: 48rpx;
  font-size: 36rpx;
  color: #ddd;
  text-align: center;
}
.cart-box .carts .goods .amount input {
  width: 60rpx;
  height: 48rpx;
  min-height: 48rpx;
  font-size: 27rpx;
  border-left: 1rpx solid #ddd;
  border-right: 1rpx solid #ddd;
}
.cart-box .extra {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9;
  width: 750rpx;
  height: 96rpx;
  text-align: center;
  line-height: 96rpx;
  font-size: 36rpx;
  border-top: 1rpx solid #eee;
  background-color: #fff;
  color: #333;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.cart-box .extra .checkall {
  width: 140rpx;
  line-height: 1;
  margin-left: 25rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.cart-box .extra .checkall icon {
  margin-right: 20rpx;
}
.cart-box .extra .total {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.cart-box .extra .total label,
.cart-box .extra .total text {
  color: #ea4451;
  vertical-align: bottom;
  position: relative;
  bottom: -2rpx;
}
.cart-box .extra .total text {
  position: relative;
  bottom: -3rpx;
  font-size: 24rpx;
}
.cart-box .extra .total text:first-child {
  margin-left: 10rpx;
}
.cart-box .extra .pay {
  width: 200rpx;
  background-color: #ea4451;
  color: #fff;
}

