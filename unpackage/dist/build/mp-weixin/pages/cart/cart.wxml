<view class="cart-box"><view class="wrapper"><view class="shipment"><block wx:if="{{address}}"><block><view class="dt">收货人:</view><view class="dd meta"><text class="name">{{address.userName}}</text><text class="phone">{{address.telNumber}}</text></view><view class="dt">收货地址:</view><view class="dd">{{detailAddress}}</view></block></block><block wx:else><button type="primary" data-event-opts="{{[['tap',[['chooseAddress',['$event']]]]]}}" bindtap="__e">收货地址</button></block></view><view class="carts"><view class="item"><view class="shopname">优购商城</view><block wx:for="{{carts}}" wx:for-item="cart" wx:for-index="index" wx:key="index"><view class="goods"><image class="pic" src="{{cart.goods_small_logo}}"></image><view class="meta"><view class="name _p">{{cart.goods_name}}</view><view class="price _p"><text>￥</text>{{cart.goods_price}}<text>.00</text></view><view class="amount"><text data-event-opts="{{[['tap',[['changeNumber',[-1,index]]]]]}}" class="reduce" bindtap="__e">-</text><input class="number" type="number" value="{{cart.goods_number}}"/><text data-event-opts="{{[['tap',[['changeNumber',[1,index]]]]]}}" class="plus" bindtap="__e">+</text></view></view><view data-event-opts="{{[['tap',[['toggle',[index]]]]]}}" class="checkbox" bindtap="__e"><icon type="success" size="20" color="{{cart.checked?'#ea4451':'#ccc'}}"></icon></view></view></block></view></view><view class="extra"><label class="checkall"><icon type="success" color="{{carts.length==checkedCarts.length?'#ea4451':'#ccc'}}" size="20"></icon>全选</label><view class="total">合计:<text>￥</text><label>{{amount}}</label><text>.00</text></view><view data-event-opts="{{[['tap',[['goPay',['$event']]]]]}}" class="pay" bindtap="__e">结算</view></view></view></view>